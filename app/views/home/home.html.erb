<%
   columns = ["NAME", "POSITION", "AVG", "HR", "RBI", "RUNS", "SB", "OPS"]
%>
<table id="datatable" class="table table-striped table-bordered">
  <thead><tr><%= columns.collect {|column| "<th>#{column}</th>" }.join('').html_safe %></tr></thead>
  <% @players.each do |player| %>
    <tr>
      <td><%= "#{player.surname}, #{player.given_name}" %></td>
      <td><%= player.position %></td>
      <td><%= player.avg %></td>
      <td><%= player.home_runs %></td>
      <td><%= player.rbi %></td>
      <td><%= player.runs %></td>
      <td><%= player.steals %></td>
      <td><%= player.ops %></td>
    </tr>
  <% end %>
</table>
<script>
$('#datatable').dataTable({
"sDom": "<'row-fluid'<'span6'l><'span6'f>r>t<'row-fluid'<'span6'i><'span6'p>>",
"sPaginationType": "bootstrap",
"iDisplayLength": 25,
"aaSorting": [[ 2, "desc" ]]
});
</script>